{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

  <!-- ================> Page header start here <================== -->
  <section class="page-header bg--cover" style="background-image:url(assets/images/header/1.png)">
    <div class="container">
      <div class="page-header__content" data-aos="fade-right" data-aos-duration="1000">
        <h2>Register</h2>
        <nav style="--bs-breadcrumb-divider: '/';" aria-label="breadcrumb">
          <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a href="index-2.html">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Register</li>
          </ol>
        </nav>
      </div>
      <div class="page-header__shape">
        <span class="page-header__shape-item page-header__shape-item--1"><img src="assets/images/header/2.png" alt="shape-icon"></span>
      </div>
    </div>
  </section>
  <!-- ================> Page header end here <================== -->

  <!-- ===============>> account start here <<================= -->
  <section class="account padding-top padding-bottom sec-bg-color2">
    <div class="container">
      <div class="account__wrapper" data-aos="fade-up" data-aos-duration="800">
        <div class="row g-4">
          <div class="col-12">
            <div class="account__content account__content--style1">

              <!-- account title -->
              <div class="account__header">
                <h2>Create Your Account</h2>
                <p>Hey there! Ready to join the party? We just need a few details from you to get started. Let's do this!</p>
              </div>

              <!-- account social -->
              <div class="account__social">
                <a href="#" class="account__social-btn"><span><img src="assets/images/others/google.svg" alt="google icon"></span>Continue with Google</a>
              </div>

              <!-- account divider -->
              <div class="account__divider account__divider--style1"><span>or</span></div>

              <!-- account form -->
              {{ form_start(registrationForm, {'attr': {'class': 'account__form needs-validation', 'novalidate': 'novalidate'}}) }}
                <div class="row g-4">

                  {% if registrationForm.firstName is defined %}
                    <div class="col-12 col-md-6">
                      {{ form_row(registrationForm.firstName, {'label': 'First name', 'attr': {'class': 'form-control', 'placeholder': 'Ex. John'}}) }}
                    </div>
                  {% else %}
                    <div class="col-12 col-md-6">
                      <label for="first-name" class="form-label">First name</label>
                      <input class="form-control" type="text" id="first-name" placeholder="Ex. John">
                    </div>
                  {% endif %}

                  {% if registrationForm.lastName is defined %}
                    <div class="col-12 col-md-6">
                      {{ form_row(registrationForm.lastName, {'label': 'Last name', 'attr': {'class': 'form-control', 'placeholder': 'Ex. Doe'}}) }}
                    </div>
                  {% else %}
                    <div class="col-12 col-md-6">
                      <label for="last-name" class="form-label">Last name</label>
                      <input class="form-control" type="text" id="last-name" placeholder="Ex. Doe">
                    </div>
                  {% endif %}

                  <div class="col-12">
                    {{ form_row(registrationForm.email, {'label': 'Email', 'attr': {'class': 'form-control', 'placeholder': 'Enter your email'}}) }}
                  </div>

                  <div class="col-12">
                    <div class="form-pass">
                      {{ form_label(registrationForm.plainPassword, 'Password', {'label_attr': {'class': 'form-label'}}) }}
                      {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control showhide-pass', 'placeholder': 'Password'}}) }}
                      <button type="button" id="btnToggle" class="form-pass__toggle"><i id="eyeIcon1" class="fa fa-eye"></i></button>
                      {{ form_errors(registrationForm.plainPassword) }}
                    </div>
                  </div>

                  {# Si tu as un champ confirmPassword dans ton form, sinon à gérer en JS #}
                  {% if registrationForm.confirmPassword is defined %}
                    <div class="col-12">
                      <div class="form-pass">
                        {{ form_label(registrationForm.confirmPassword, 'Confirm Password', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(registrationForm.confirmPassword, {'attr': {'class': 'form-control showhide-pass', 'placeholder': 'Re-type password'}}) }}
                        <button type="button" id="btnCToggle" class="form-pass__toggle"><i id="eyeIcon2" class="fa fa-eye"></i></button>
                        {{ form_errors(registrationForm.confirmPassword) }}
                      </div>
                    </div>
                  {% else %}
                    <div class="col-12">
                      <div class="form-pass">
                        <label for="account-cpass" class="form-label">Confirm Password</label>
                        <input type="password" class="form-control showhide-pass" id="account-cpass" placeholder="Re-type password" required>
                        <button type="button" id="btnCToggle" class="form-pass__toggle"><i id="eyeIcon2" class="fa fa-eye"></i></button>
                      </div>
                    </div>
                  {% endif %}

                </div>

                <button type="submit" class="trk-btn trk-btn--border trk-btn--primary d-block mt-4">Sign Up</button>
              {{ form_end(registrationForm) }}

              <div class="account__switch">
                <p>Don’t have an account yet? <a href="signin.html">Login</a></p>
              </div>

            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="account__shape">
      <span class="account__shape-item account__shape-item--1"><img src="assets/images/contact/4.png" alt="shape-icon"></span>
    </div>
  </section>
  <!-- ===============>> account end here <<================= -->

{% endblock %}
